<% provide(:title, 'All notes') %>
<h1>All notes</h1>

<div class="row">
	<div class="span12">
		<%= will_paginate %>

		<ul class="users">
		  <% if false %> <%= render @notes %><% end %> <!-- Line to replace .each with @notes partial, which exists -->
		  <% @notes.each do |note| %>
			  <li id="NoteID<%= note.id %>" >
	  			<span class="content"><%= note.name %> (<%= note.description %>) (ID: <%= note.id %>)</span>
	  			<span class="content">
	  				<%= link_to "Remove", note_path(:id => note.id), :method => :delete %>
				  </span>
				</li>
			<% end %>
		</ul>

		<%= will_paginate %>
	</div>
</div>
<% if current_user != nil and current_user.admin? %>
	<div class="row">
		<div class="span12">
			<h3>New Note</h3>

			<%= form_for(Note.new) do |f| %>
				<div class="field"><%= f.label :name %></div>
				<div class="field"><%= f.text_field :name %></div>

				<div class="field"><%= f.label :description %></div>
				<div class="field"><%= f.text_field :description %></div>

				<%= f.submit "New Note", class: "btn btn-large" %>
			<% end %>
		</div>
	</div>
<% end %>