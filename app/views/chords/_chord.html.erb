<li>
  <span class="content"><%= link_to "#{chord.name} (#{chord.description})", chord %> (<%= chord.id %>)</span>
  <span class="timestamp">
    Created <%= time_ago_in_words(chord.created_at) %> ago.
  </span>
  <span class="content"><%= link_to "remove", chord, method: :delete %></span>
  <span class="timestamp">
  <div style="margin-left: 25px">
  <ol class="microposts">
  	<% if chord.notes.any? %>
      <ol class="microposts">
        <%= render chord.notes %>
      </ol>
      
    <% end %>
	</ol>
	</div>
</li>